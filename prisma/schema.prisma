datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  user
  admin
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  name        String
  type        Role    @default(user)
  isActivated Boolean @default(false)

  // Utility
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
